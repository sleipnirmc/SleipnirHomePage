rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products collection - everyone can read, no one can write (for now)
    match /products/{document=**} {
      allow read: if true;
      allow write: if false; // Disable writes until auth is added back
    }
    
    // Contact submissions - anyone can create, no one can read/update/delete
    match /contacts/{document=**} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Display members collection - everyone can read
    match /displayMembers/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Members collection - everyone can read
    match /members/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}